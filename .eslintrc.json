{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "react-app",
        "prettier"
    ],
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "none",
                "semi": true,
                "singleQuote": true,
                "useTabs": true,
                "endOfLine": "auto",
                "tabWidth": 2
            }
        ]
    }
}